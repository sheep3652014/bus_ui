<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:background="@color/l_blue"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
        >
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/humanPay_title"
            android:textSize="@dimen/font_size_18"
            android:textColor="@color/white"
            style="@style/marginleftRightStyle"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text="充值金额："
            />
        <TextView 
            android:id="@+id/tv_chargemoney"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text="1.00元"
            />
        <Button 
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text="确认"
            />
        <Button 
            android:id="@+id/btn_print"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text="打印收据"
            />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/Lin_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/ib_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_select" />

        <LinearLayout
            android:id="@+id/Lin_whyClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/question_s" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bigCard_whyClick"
                android:textColor="@color/l_blue"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>