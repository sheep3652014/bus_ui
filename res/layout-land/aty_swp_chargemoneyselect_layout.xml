<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white"
    >

    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:background="@color/l_blue"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
        >
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        	android:text="选择充值金额"
            android:textSize="@dimen/font_size_18"
            android:textColor="@color/white"
            style="@style/marginleftRightStyle"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_ChargeSelect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="@drawable/line"
        android:dividerHeight="2dp"
        >
    </ListView>

    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/oriange"
        android:text="@string/chargeNotice"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_payMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bigCard_payMethod"
        android:background="@drawable/btn_blue"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        />
</LinearLayout>