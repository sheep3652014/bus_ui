<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
 	
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_marginRight="10dp"
    	android:layout_marginEnd="10dp" 
        >
    	<TextView 
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="@string/bigCard_publishCardNO"
    		android:textColor="@color/black"
       	/>
    	<TextView 
        	android:id="@+id/tv_publishCardNO"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="1234567890123456"
    		android:textColor="@color/black"
       	/>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginRight="10dp"
    	android:layout_marginEnd="10dp" 
        >
    	<TextView 
    	    android:id="@+id/tv_text"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="@string/bigCard_money"
    		android:textColor="@color/black"
       	/>
    	<TextView 
        	android:id="@+id/tv_money"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_toRightOf="@+id/tv_text"
    		android:layout_toEndOf="@+id/tv_text" 
    		android:text="13.30"
    		android:textColor="@color/black"
       	/>
    	<TextView 
        	android:id="@+id/tv_record"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="@string/bigCard_readRecord"
    		android:textColor="@color/text_color_click"
    		android:layout_alignParentRight="true"
    		android:layout_alignParentEnd="true"
       	/>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/ChargeSelect_notice"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16" />

        <GridView
            android:id="@+id/gv_list"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:numColumns="3" 
            >
        </GridView>
    </LinearLayout>
	
   <Button
        android:id="@+id/btn_payMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bigCard_payMethod"
        android:background="@drawable/btn_blue"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        />
</LinearLayout>