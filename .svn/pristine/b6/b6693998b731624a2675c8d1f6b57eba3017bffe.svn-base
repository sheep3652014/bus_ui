<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_gravity="center"
    android:background="@drawable/confirm_dialog_bg"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    >
    
    <TextView 
        android:id="@+id/tv_NFC_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bigCardInit_title"
        android:textSize="@dimen/font_size_16"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        />
	
    <TextView 
        android:id="@+id/tv_NFC_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bigCardInit_notice"
        android:textSize="@dimen/font_size_16"
        android:textColor="@color/light_yellow"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        />
    
    <ImageView 
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/yichang_nfc"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        />
    
    <Button 
        android:id="@+id/btn_readCom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读公共信息"
        android:visibility="gone"
        />
    <Button 
        android:id="@+id/btn_CircleInit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="圈存初始化"
        android:visibility="gone"
        />
    <Button 
        android:id="@+id/btn_Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="圈存写卡"
        android:visibility="gone"
        />
</LinearLayout>
